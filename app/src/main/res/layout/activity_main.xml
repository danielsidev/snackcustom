<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:stretchColumns="1">

    <TableRow
        android:textAlignment="center"
        android:gravity="center_horizontal">
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        card_view:cardBackgroundColor="#FF4081"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        card_view:cardElevation="5dp">
        <TextView
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:textAlignment="center"
            android:text="Snackbar Cor de Fundo 1"></TextView>
    </android.support.v7.widget.CardView>
    </TableRow>
        <TableRow
            android:textAlignment="center"
            android:gravity="center_horizontal">
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                card_view:cardBackgroundColor="#303F9F"
                card_view:cardCornerRadius="5dp"
                android:layout_margin="20dp"
                android:layout_centerInParent="true"
                card_view:cardElevation="5dp">
                <TextView
                    android:id="@+id/bt2"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:text="Snackbar Cor de Fundo 2"></TextView>
            </android.support.v7.widget.CardView>
        </TableRow>
        <TableRow
            android:textAlignment="center"
            android:gravity="center_horizontal">
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                card_view:cardBackgroundColor="#dea537"
                card_view:cardCornerRadius="5dp"
                android:layout_margin="20dp"
                android:layout_centerInParent="true"
                card_view:cardElevation="5dp">
                <TextView
                    android:id="@+id/bt3"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#f05401"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:text="Snackbar Cor do Fundo e Texto 1"></TextView>
            </android.support.v7.widget.CardView>
        </TableRow>
        <TableRow
            android:textAlignment="center"
            android:gravity="center_horizontal">
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                card_view:cardBackgroundColor="#EDEDED"
                card_view:cardCornerRadius="5dp"
                android:layout_margin="20dp"
                android:layout_centerInParent="true"
                card_view:cardElevation="5dp">
                <TextView
                    android:id="@+id/bt4"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#1b7d83"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:text="Snackbar Cor de Fundo e Texto 2"></TextView>
            </android.support.v7.widget.CardView>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>